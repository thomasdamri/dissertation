.container
  .row 
    .col-sm
      =link_to 'Back', return_task_list_path(student_task.student_team_id), class: "btn", remote: true
  .row
    .col-xl
      = @student_task.get_linked_students()
  .row
    .col-xl
      = student_task.task_objective
= StudentTask.difficulty_int_to_string(student_task.task_difficulty)
= student_task.task_target_date

-if can?(:edit, StudentTask)
  =link_to 'Edit', edit_student_task_path(student_task)
  =link_to 'Complete', student_team_dashboard_path(student_task.student_team_id), class: "btn"
%br 
#like_button
  =button_to @like_outcome, student_task_like_task_path(student_task), class: "btn", remote: true
%br
  = simple_form_for student_task_comment, url: student_task_comment_path(student_task.id), remote: true do |f|

    %h5 New Task
    = f.button :submit, 'Comment', class: 'btn btn-primary' 

    .input-group 
    = f.input_field :comment, required: true, as: :string, placeholder: "Enter comment"

%br
#comment_list
  = render partial: 'comments_list', locals: {comments: student_task.student_task_comments}  