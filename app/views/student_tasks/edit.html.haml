-# 
  Modal View to edit the selected task
.modal-dialog
  .modal-content
    = simple_form_for @student_task, remote: true, url: student_task_path(@student_task)  do |f|

      %h5 New Task
      = f.button :submit, 'Update', class: 'btn btn-primary' 

      .input-group 
      = f.input_field :task_objective, required: true, as: :string, placeholder: "Objective...", label: "Whats the objective?"

      .input-group 
      = f.input_field :task_difficulty, as: :select, collection: ["Easy", "Medium", "Hard"], input_html: {multiple: false}, label: "Difficulty"

      .input-group 
      = f.input :task_target_date, start_year: Date.today.year, label: "Updated Target Date:"


      = f.simple_fields_for :student_task_edit do |edit_form|
        .input-group 
        = edit_form.input_field :edit_reason, required: true, as: :string, placeholder: "Reason...", label: "Reason for editing task? (Required if editing date)"