-# Partial form for student tasks
.col.task-options-container
  = simple_form_for @task, url: student_task_create_path(@student_team.id) do |f|
    .row.pt-1.mb-3
      .col.form-group.mb-0
        = f.text_area  :task_objective, required: true, as: :string, placeholder: "Whats the task objective?", rows: 2, class: 'form-control'

    .row.form-group
      .col-auto.mb-0
        = f.label :task_target_date, "Target date?"
      .col.mb-0
        = f.input :task_target_date, start_year: Date.today.year, lable: false, class: 'form-control bp-1 mb-0', label: false

    .row.justify-content-between.form-group
      .col-auto
        = f.label :task_difficulty, "How difficult?"
      .col
        = f.input_field :task_difficulty, as: :select, collection: ["Easy", "Medium", "Hard"], prompt: "Difficulty", class: 'form-control form-select'

      .col-auto 
        = f.button :submit, 'Create Task', class: 'btn btn-primary float-right'
