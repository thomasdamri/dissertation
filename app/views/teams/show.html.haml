.modal.fade#indGradeModal{"tabindex":"-1", "role": "dialog", "aria-labelledby": "indGradeModalLabel", "aria-hidden": "true"}
  .modal-dialog.modal-lg{"role": "document"}
    .modal-content
      .modal-header
        %h5.modal-title#indGradeModalLabel Individual Grades
        %button.close{"type": "button", "data-dismiss": "modal", "aria-label": "Close"}
          %span{"aria-hidden": "true"} &times;
      .modal-body#indGradeModalBody
      .modal-footer
        %button.btn.btn-secondary{"type": "button", "data-dismiss": "modal"}
          Close

%h2= "Team " + @team.number.to_s

%h3 Members
= render 'admin/small_user_list'
.glyphRow
  %h5 Group Email Info
  %span.material-icons email
%button.btn.btn-primary{"data-toggle":"collapse", "data-target":"#groupEmail", "role": "button", "aria-expanded": "false", "aria-controls": "collapseExample"} Show
.collapse#groupEmail
  .card.card-body
    %a{href: @team.group_email_link}= @team.group_email_link

%hr

%h3 Peer Assessments
- if current_user.staff
  = render 'admin/assessment_list_staff'
- else
  = render 'admin/assessment_list'

- if current_user.staff
  %h4 Team Grades
  = render 'teams/grade_table'

= link_to 'Edit', edit_team_path(@team)
\|
= link_to 'Back', teams_path
