-# frozen_string_literal: true
= simple_form_for(@assessment) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name, as: :string, label: 'Name'
    = f.input :date_opened, start_year: Date.today.year
    = f.input :date_closed, start_year: Date.today.year
    = f.input :mod, as: :hidden, input_html: {value: @unimod.id}

    = f.simple_fields_for :criteria do |af|
      = render 'criterium_fields', f: af

    = link_to_add_fields 'Add Question Field', f, :criteria, 'criterium_fields'

  .form-actions
    = f.button :submit, class: 'btn btn-lg btn-primary'
