- # Partial used for the current chat panel
.task-options-container
  = render partial: "student_chats/chat_form"


.task-options-container
  %div
    -# Subscribe to the turbostream
    = turbo_stream_from ("Team-"+ student_team.team.id.to_s)
    %div{id: 'student_chats'}
      -# Render the collection of chat messages
      - if messages.count > 0
        = render partial: "student_chats/student_chat", collection: messages, locals: {user_id: current_user.id.to_i}
      - else 
        .text-center 
          %p There are currently no chats this week.